<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (Tree) -->
    <record id="view_courier_incident_tree" model="ir.ui.view">
        <field name="name">courier.incident.tree</field>
        <field name="model">courier.incident</field>
        <field name="arch" type="xml">
            <list string="Incident Log Operasional"
                  decoration-warning="state == 'followup'"
                  decoration-success="state == 'done'">
                <field name="name" string="Name"/>
                <field name="customer_id" string="Jamaah"/>
                <field name="shipment_id" string="Quotation"/>
                <field name="incident_type" string="Type"/>
                <field name="severity" string="Severity"/>
                <field name="state" string="State"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_courier_incident_form" model="ir.ui.view">
        <field name="name">courier.incident.form</field>
        <field name="model">courier.incident</field>
        <field name="arch" type="xml">
            <form string="Incident Log Operasional">
                <header>
                    <button name="action_mark_followup"
                            string="Mark Follow-up"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_resolve"
                            string="Resolve"
                            type="object"
                            class="btn-success"
                            invisible="state != 'followup'"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,followup,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Judul Insiden..." class="o_text_overflow"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informasi Pelanggan">
                            <field name="customer_id" string="Jamaah"/>
                            <field name="shipment_id" string="Quotation"/>
                        </group>
                        <group string="Detail Insiden">
                            <field name="incident_type" string="Incident Type"/>
                            <field name="severity" string="Severity" widget="radio"/>
                            <field name="incident_datetime" string="Incident Datetime"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="state" string="State" readonly="1"/>
                            <field name="resolved_at" string="Resolved at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Kronologi" name="page_description">
                            <field name="description"
                                   placeholder="Detail kronologi kejadian..."
                                   nolabel="1"
                                   class="oe_inline"/>
                        </page>
                        <page string="Catatan Tindakan" name="page_followup">
                            <field name="followup_note"
                                   placeholder="Tindakan yang diambil..."
                                   nolabel="1"
                                   class="oe_inline"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_courier_incident_search" model="ir.ui.view">
        <field name="name">courier.incident.search</field>
        <field name="model">courier.incident</field>
        <field name="arch" type="xml">
            <search string="Search Incidents">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="shipment_id"/>
                <field name="incident_type"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Follow-up" name="filter_followup" domain="[('state', '=', 'followup')]"/>
                <filter string="Done" name="filter_done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Jamaah" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'incident_type'}"/>
                    <filter string="Severity" name="group_severity" context="{'group_by': 'severity'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_courier_incident" model="ir.actions.act_window">
        <field name="name">Incident Log Operasional</field>
        <field name="res_model">courier.incident</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_courier_incident_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first incident log
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_courier_incident"
              name="Log Insiden"
              action="action_courier_incident"
              sequence="10"/>
</odoo>
